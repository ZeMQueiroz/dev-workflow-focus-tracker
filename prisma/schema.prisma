generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id         Int       @id @default(autoincrement())
  name       String
  color      String?    // later for themes / labels
  isArchived Boolean    @default(false)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  // New: who owns this project (GitHub email)
  ownerEmail String?

  sessions   Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int

  // New: denormalized owner (matches project owner)
  ownerEmail String?

  intention  String
  notes      String?
  startTime  DateTime
  endTime    DateTime
  durationMs Int      // store ms, we can format to h/m later

  createdAt DateTime @default(now())
}

model WeeklyHighlight {
  id         Int      @id @default(autoincrement())
  ownerEmail String
  weekStart  DateTime
  highlight  String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([ownerEmail, weekStart], name: "ownerEmail_weekStart")
}

